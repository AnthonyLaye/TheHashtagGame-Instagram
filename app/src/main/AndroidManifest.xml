<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tektuna.antho.thetaggame">

    <uses-permission android:name="READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme ="@style/Theme.AppCompat.NoActionBar">
        <activity android:name="org.tektuna.antho.thetaggame.TitleScreen"
            android:configChanges="orientation"
            android:screenOrientation = "portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.tektuna.antho.thetaggame.GameActivity"
        android:configChanges="orientation"
        android:screenOrientation = "portrait">
        </activity>

        <activity android:name="org.tektuna.antho.thetaggame.LoseActivity"
        android:configChanges="orientation"
        android:screenOrientation = "portrait">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>